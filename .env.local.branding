# Copie este arquivo para .env.local e edite os valores

# NOME DA EMPRESA CLIENTE
NEXT_PUBLIC_CLIENT_NAME="Aec Serviços Especializados"

# COR PRINCIPAL DA EMPRESA (hex sem #)
NEXT_PUBLIC_CLIENT_COLOR="9333ea"

# LOGO DA EMPRESA (nome do arquivo em public/logos/)
NEXT_PUBLIC_CLIENT_LOGO="client-logo.png"

# LOGO DO CHAMEIAPP (nome do arquivo em public/logos/)
NEXT_PUBLIC_CHAMEIAPP_LOGO="chameiapp-logo.png"

